<Window x:Class="TippspielClient.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TippspielClient.Views"
        mc:Ignorable="d"
        Title="Tippspiel" Height="163" Width="300" ResizeMode="NoResize">
    <Grid>
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
			<TextBox Height="23" TextWrapping="Wrap" Text="{Binding UserName}"  HorizontalContentAlignment="Center"/>
			<Button Command="{Binding LoginCommand}" Content="Login" Width="100" Margin="0,10,0,0"/>


		</StackPanel>
	</Grid>
</Window>
